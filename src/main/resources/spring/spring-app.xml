<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- configuration details go here -->
    <bean class="ru.whereToEat.repository.jdbc.JDBCUserRepository" id="jdbcUserRepository"/>
    <bean class="ru.whereToEat.repository.jdbc.JDBCRestaurantRepository" id="jdbcRestaurantRepository"/>
    <bean class="ru.whereToEat.repository.jdbc.JDBCMealRepository" id="jdbcMealRepository"/>
    <bean class="ru.whereToEat.repository.jdbc.JDBCVotesRepository" id="jdbcVotesRepository"/>

    <bean class="ru.whereToEat.repository.inMemory.InMemoryMealRepository" id="inMemoryMealRepository"/>
    <bean class="ru.whereToEat.repository.inMemory.InMemoryRestaurantRepository" id="inMemoryRestaurantRepository"/>
    <bean class="ru.whereToEat.repository.inMemory.InMemoryUserRepository" id="inMemoryUserRepository"/>
    <bean class="ru.whereToEat.repository.inMemory.InMemoryVotesRepository" id="inMemoryVotesRepository"/>

    <bean class="ru.whereToEat.service.UserService">
        <constructor-arg name="repository" ref="jdbcUserRepository"/>
    </bean>

    <bean class="ru.whereToEat.service.VoteService">
        <constructor-arg name="repository" ref="jdbcVotesRepository"/>
    </bean>

    <bean class="ru.whereToEat.service.MealService">
        <constructor-arg name="repository" ref="jdbcMealRepository"/>
    </bean>

    <bean class="ru.whereToEat.service.RestaurantService">
        <constructor-arg name="repository" ref="jdbcRestaurantRepository"/>
    </bean>

</beans>
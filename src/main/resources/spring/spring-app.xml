<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- configuration details go here -->
    <bean class="ru.whereToEat.repository.jdbc.JDBCUserRepository" id="jdbcUserRepository"/>
    <bean class="ru.whereToEat.repository.jdbc.JDBCRestaurantRepository" id="restaurantRepository"/>
    <bean class="ru.whereToEat.repository.jdbc.JDBCMealRepository" id="mealRepository"/>
    <bean class="ru.whereToEat.repository.jdbc.JDBCMealRepository" id="mealRepository"/>

    <bean class="ru.whereToEat.service.UserService">
        <constructor-arg name="repository" ref="jdbcUserRepository"/>
    </bean>

</beans>